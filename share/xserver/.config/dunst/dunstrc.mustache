[global]
font                 = {{font}} {{font-size}}
alignment            = left
bounce_freq          = 0
browser              = /home/placek/.nix-profile/bin/google-chrome-stable
dmenu                = /home/placek/.nix-profile/bin/rofi -dmenu
follow               = none
format               = "<b>%a: %s</b>\n%b\n%p"
frame_width          = {{border-size}}
geometry             = "0x50-0+26"
hide_duplicate_count = yes
history_length       = 15
horizontal_padding   = {{border-size}}
icon_path            = /usr/share/icons/Paper/16x16/mimetypes/:/usr/share/icons/Paper/48x48/status/:/usr/share/icons/Paper/16x16/devices/:/usr/share/icons/Paper/48x48/notifications/:/usr/share/icons/Paper/48x48/emblems/
icon_position        = left
idle_threshold       = 0
ignore_newline       = no
indicate_hidden      = yes
line_height          = 3
markup               = yes
max_icon_size        = 48
monitor              = 0
mouse_left_click     = do_action
mouse_right_click    = close_current
padding              = {{border-size}}
plain_text           = no
separator_color      = "#{{base03-hex}}"
separator_height     = {{border-size}}
show_age_threshold   = -1
show_indicators      = no
shrink               = no
sort                 = no
stack_duplicates     = yes
startup_notification = false
sticky_history       = yes
transparency         = 5
word_wrap            = yes

[base16_low]
frame_color          = "#{{base04-hex}}"
background           = "#{{base00-hex}}"
foreground           = "#{{base05-hex}}"
msg_urgency          = low
timeout              = 4

[base16_normal]
frame_color          = "#{{base0D-hex}}"
background           = "#{{base00-hex}}"
foreground           = "#{{base05-hex}}"
msg_urgency          = normal
timeout              = 6

[base16_critical]
frame_color          = "#{{base08-hex}}"
background           = "#{{base00-hex}}"
foreground           = "#{{base05-hex}}"
msg_urgency          = critical
timeout              = 8
