# FONTS
font_family                   {{font}} Nerd Font
bold_font                     {{font}} Nerd Font Bold
italic_font                   {{font}} Nerd Font Italic
bold_italic_font              {{font}} Nerd Font BoldItalic
font_size                     {{font-size}}.0

# SCROLLING
scrollback_lines              9999
scrollback_pager              less --chop-long-lines --RAW-CONTROL-CHARS +INPUT_LINE_NUMBER
scrollback_pager_history_size 0

# MOUSE
mouse_hide_wait               3.0

adjust_column_width           0
adjust_line_height            0
allow_hyperlinks              yes
allow_remote_control          no
background_opacity            1.0
background_tint               0.0
bell_on_tab                   no
box_drawing_scale             0.001, 1, 1.5, {{border-half-size}}
click_interval                -1.0
clipboard_control             write-clipboard write-primary
close_on_child_death          yes
command_on_bell               none
confirm_os_window_close       0
copy_on_select                no
cursor_blink_interval         -1
cursor_shape                  block
cursor_stop_blinking_after    15.0
default_pointer_shape         beam
detect_urls                   yes
dim_opacity                   0.75
disable_ligatures             always
draw_minimal_borders          yes
editor                        nvim
enable_audio_bell             no
enabled_layouts               tall
focus_follows_mouse           no
font_features                 none
force_ltr                     no
hide_window_decorations       yes
inactive_text_alpha           1.0
initial_window_height         400
initial_window_width          640
input_delay                   3
open_url_modifiers            ctrl
placement_strategy            center
pointer_shape_when_dragging   beam
pointer_shape_when_grabbed    arrow
rectangle_select_modifiers    ctrl+alt
remember_window_size          no
repaint_delay                 10
resize_debounce_time          0.1
resize_draw_strategy          static
resize_in_steps               no
select_by_word_characters     @-./_~?&=%+#
single_window_margin_width    -1
startup_session               none
strip_trailing_spaces         never
sync_to_monitor               yes
tab_bar_background            none
tab_bar_edge                  bottom
tab_bar_margin_width          0.0
tab_bar_min_tabs              2
tab_bar_style                 powerline
tab_switch_strategy           previous
tab_title_template            "kitty"
term                          xterm-256color
terminal_select_modifiers     shift
touch_scroll_multiplier       1.0
update_check_interval         0
url_prefixes                  http https file ftp
url_style                     curly
visual_bell_duration          0.0
wheel_scroll_multiplier       5.0
window_alert_on_bell          no
window_border_width           {{border-size}}
window_margin_width           0
window_padding_width          {{border-size}}
window_resize_step_cells      {{border-half-size}}
window_resize_step_lines      {{border-half-size}}

map super+c                   copy_to_clipboard
map super+v                   paste_from_clipboard
map ctrl+plus                 change_font_size all +2.0
map ctrl+minus                change_font_size all -2.0
map ctrl+0                    change_font_size all 0
map ctrl+h                    kitten hints --regex "([0-9a-fA-F-]+)" --type regex --program -

background                    #{{base00-hex}}
foreground                    #{{base0F-hex}}
selection_background          #{{base04-hex}}
selection_foreground          #{{base0F-hex}}
url_color                     #{{base04-hex}}
cursor                        #{{base0F-hex}}
active_border_color           none
inactive_border_color         none
active_tab_background         none
active_tab_foreground         none
inactive_tab_background       none
inactive_tab_foreground       none
tab_bar_background            none

