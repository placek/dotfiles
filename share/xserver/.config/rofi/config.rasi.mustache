configuration {
  matching: "fuzzy";
  location: south;
}

* {
  background-color:           #{{base00-hex}};
  border-color:               #{{base09-hex}};
  text-color:                 #{{base05-hex}};
  prompt-background:          #{{base09-hex}};
  prompt-foreground:          #{{base00-hex}};
  selected-normal-background: #{{base09-hex}};
  selected-normal-foreground: #{{base00-hex}};
  font:                       "{{font}} {{font-size}}";
  prompt-font:                "{{font}} {{font-size}}";
  prompt-padding:             {{border-half-size}}px 0.5em;
}

window {
  anchor:   north;
  location: north;
  border: 0px;
  width:    100%;
  padding:  0px;
  children: [ horibox ];
}

horibox {
  orientation: horizontal;
  children: [ prompt, entry, listview ];
}

prompt {
  padding:          @prompt-padding;
  background-color: @prompt-background;
  text-color:       @prompt-foreground;
  font:             @prompt-font;
}

listview {
  layout: horizontal;
  spacing: {{border-half-size}}px;
  lines: 100;
}

entry {
  padding: {{border-half-size}}px {{border-size}}px;
  expand: false;
  width: 10em;
}

element {
  padding: 0px;
}

element-text {
  padding: 2px 4px;
  background-color: @background-color;
  text-color:       @text-color;
}

element-text selected {
  background-color: @selected-normal-background;
  text-color:       @selected-normal-foreground;
}
