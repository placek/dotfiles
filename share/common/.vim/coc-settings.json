{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "explorer": {
    "width": 40,
    "open-action-strategy": "sourceWindow",
    "previewAction.onHover": false,
    "git": {
      "icon": {
        "status": {
          "mixed": "*",
          "unmodified": " ",
          "modified": "~",
          "added": "+",
          "deleted": "-",
          "renamed": ">",
          "copied": ":",
          "unmerged": ".",
          "untracked": "?",
          "ignored": "!"
        }
      }
    },
    "keyMappings.global": {
      "<cr>": ["wait", "expandable?", ["expanded?", "collapse", "expand"], "open"],
      "v": "open:vsplit:intelligent",
      "s": "open:split:intelligent",
      "c": "cd"
    }
  }
}
