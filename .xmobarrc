Config { font            = "xft:Iosevka Term:size=12:antialias=true:hinting=true"
       , additionalFonts = []
       , bgColor         = "#2C3E50"
       , fgColor         = "#ECF0F1"
       , position        = TopW L 100
       , lowerOnStart    = True
       , sepChar         = "%"
       , alignSep        = "}{"
       , template        = "<action=`xdotool key alt+shift+l`> <icon=/home/placek/.logo.xpm/> </action>%UnsafeStdinReader%}{<action=`urxvt -e top`>%cpu%%memory%</action>%disku%<action=`urxvt -e nmtui`>%enp0s5%%wlan0wi%</action><action=`urxvt -e alsamixer`>%volume%</action>%battery%<action=`google-chrome https://calendar.google.com`>%date%</action>"
       , commands = [ Run Cpu              [ "-t", " CPU <total>% "
                                           , "-L", "3", "-H", "50"
                                           , "-n", "#2ECC71"
                                           , "-h", "#E74C3C" ] 10
                    , Run Memory           [ "-t", "\xE0B3 MEM <usedratio>% " ] 10
                    , Run DiskU            [ ("/", "\xE0B3 DRV <freep>% ") ] [] 100
                    , Run Network "enp0s5" [ "-t", "\xE0B3 NET \x2193<rx>kb \x2191<tx>kb " ] 10
                    , Run Wireless "wlan0" [ "-t", "<fc=#878787,#2C3E50>\xE0B2</fc><fc=#EEEEEE,#878787> WIFI <quality>% </fc>"] 10
                    , Run Battery          [ "-t", "<fc=#EEEEEE,#878787>\xE0B3 <acstatus> <left>% </fc>"
                                           , "--"
                                           , "-O", "AC"
                                           , "-i", "AC"
                                           , "-o", "BAT"
                                           , "-h", "#2ECC71"
                                           , "-l", "#E74C3C" ] 10
                    , Run Com "bash"       [ "-c", "printf \"<fc=#EEEEEE,#878787>\xE0B3 VOL %s </fc>\" $(amixer get Master | grep dB | cut -d'[' -f2 | cut -d']' -f1) " ] "volume" 10
                    , Run Date "<fc=#2ECC71,#878787>\xE0B2</fc><fc=#2C3E50,#2ECC71> %a \xE0B3 %H:%M \xE0B3 %d.%m.%Y </fc>" "date" 10
                    , Run UnsafeStdinReader
                    ]
       }
