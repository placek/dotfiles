#!/usr/bin/env bash

alias stow='/usr/bin/env stow'

if ! command -v "stow" &> /dev/null; then
  >&2 echo "dots: stow command could not be found"
  exit 1
fi

script_file=$(realpath $0)
script_dir=$(dirname $script_file)
source_dir="$(dirname $script_dir)/share"
target_dir=$HOME
packets=$(ls -1 $source_dir)

[ ! -d "$target_dir" ] && mkdir -p "$target_dir"

case "$1" in
  i*)
    for dir in $(find $source_dir/* -mindepth 1 -type d -printf "%P\n"); do
      mkdir -p  $target_dir/$dir
      chmod 700 $target_dir/$dir
    done
    ;;

  m*)
    shift
    if [ -z "$@" ]; then
      stow --dir=$source_dir --target=$target_dir --verbose --stow $packets
    else
      stow --dir=$source_dir --target=$target_dir --verbose --stow $@
    fi
    ;;

  u*)
    shift
    if [ -z "$@" ]; then
      stow --dir=$source_dir --target=$target_dir --verbose --delete $packets
    else
      stow --dir=$source_dir --target=$target_dir --verbose --delete $@
    fi
    ;;

  r*)
    shift
    if [ -z "$@" ]; then
      stow --dir=$source_dir --target=$target_dir --verbose --restow $packets
    else
      stow --dir=$source_dir --target=$target_dir --verbose --restow $@
    fi
    ;;

  *)
    >&2 echo "usage: dots [install|mount|umount|help]"
    ;;
esac
