#!/usr/bin/env bash

OPTIND=1

red="#ff0000"

while getopts "r:" opt; do
  case "$opt" in
  r) red=$OPTARG
  ;;
  esac
done

shift $((OPTIND-1))

[ "${1:-}" = "--" ] && shift

# dunst notifications status
[ $(dunstctl is-paused) == "false" ] && printf "<fc=$red>"
[ $(dunstctl count waiting) == "0" ] && printf "\\u2690 " || printf "\\u2691 "
[ $(dunstctl is-paused) == "false" ] && printf "</fc>"

# gpg smart card status
ssh-add -l >/dev/null 2>/dev/null && printf "\\uE0A2 "

# right separator
printf "\\uE0B3 "
